<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/stylesheets/sellerProfile.css"> 
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"
    />
</head>
<body>
  <form id="uploadform" hidden action="/seller/sellerImage" method="post" enctype="multipart/form-data">
    <input type="file" name="profileImage">
    <input type="submit" value="submit">
  </form>
  <div class="main_box">
    <input type="checkbox" id="check" />
    <div class="btn_one">
      <label for="check">
        <i class="fa-solid fa-bars"></i>
      </label>
    </div>

    <div class="sidebar_menu">
      <div class="logo">
        <a href="#">Agro Techies</a>
      </div>

      <div class="btn_two">
        <label for="check" style="color: grey">
          <i class="fa-solid fa-xmark"></i>
        </label>
      </div>

      <div class="menu">
        <ul>
          <li>
            <a href="/seller/myproducts">My Products</a>
          </li>
          <li>
            <a href="#">Inbox</a>
          </li>
          <li>
            <a href="/seller/orders">Orders</a>
          </li>
          <li>
            <a href="/seller/addproduct">Add Product</a>
          </li>
          <li>
            <a href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </div>
  <div class="page">
    <div class="left">
        <div class="box">
            <div class="edit">
              <a id="uploadicon" href=""><i class="fa-solid fa-pen" id="pen"></i></a>
            </div>
            <img src="<%= seller.profileImage %>">
            <h2><%= seller.fullName %></h2>
            <h6>@<%= seller.username %></h6>
            <h6>Comapny Name : <%= seller.company%></h6>
            <h6>Sales : <%= seller.orders.length %></h6>
            <h6>Email : <%= seller.email %></h6>
            <h6>Contact: <%= seller.contact %></h6>
            <button>Home</button> &nbsp;&nbsp;&nbsp; <button>Logout</button>
        </div>
    </div>
    <div class="right">
            <div class="card" id="product">
              <img src="/images/product.webp" onclick="product()">
              <h2>Products</h2>
            </div>
            <div class="card" id="order" >
              <img src="/images/order.png" onclick="Orders()">
              <h2>Orders</h2>
            </div>
            <div class="card" id="review">
              <img src="/images/feedback.jpg" onclick="reviews()">
              <h2>Reviews / Complaints</h2>
            </div>
    </div>
  </div>
  <script>
    document.querySelector('#uploadicon').addEventListener("click", () => {
      document.querySelector("#uploadform>input").click();
    })
    function product(){
        window.location.href = `/seller/myproducts`
    }
    function Orders(){
        window.location.href = `/seller/orders`
    }
    function reviews(){
        window.location.href = `/seller/reviews`
    }

  </script>  
</body>
</html>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Redeem Requests</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100 min-h-screen flex flex-col justify-center items-center p-8">
    <div class="max-w-screen-lg mx-auto">
        <h1 class="text-3xl font-bold mb-8 text-center">Redeem Requests</h1>
        <div class="grid grid-cols-1 gap-8">
            <% requests.forEach(redeem => { %>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <h2 class="text-xl font-semibold mb-2">Account Number: <%= redeem.accountNumber %></h2>
                <p class="text-gray-600 mb-2">IFSC Code: <%= redeem.ifsc %></p>
                <p class="text-gray-600 mb-2">Account Holder: <%= redeem.account %></p>
                <p class="text-gray-600 mb-2">Balance: <%= redeem.balance %></p>
                <p class="text-gray-600 mb-2">Kisaan: <%= redeem.kisaan %></p>
                <p class="text-gray-600">Requested At: <%= new Date(redeem.createdAt).toLocaleString() %></p>
            </div>
            <% }) %>
        </div>
    </div>
</body>

</html>
